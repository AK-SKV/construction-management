<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Top menu item -->
        <menuitem name="Building" id="bm_menu_main" sequence="60"/>
        <menuitem name="Menu" id="bm_menu_left" parent="bm_menu_main" sequence="1"/>
        <!--WBS-->
        <record id="wbs_act" model="ir.actions.act_window">
            <field name="name">WBS</field>
            <field name="res_model">bm.wbs</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new WBS
                </p>
            </field>
        </record>
        <record id="wbs_search_view" model="ir.ui.view">
            <field name="name">bm.wbs.search</field>
            <field name="model">bm.wbs</field>
            <field name="arch" type="xml">
                <search string="WBS">
                    <field name="name" string="WBS"/>
                    <field name="parent_id"/>
                </search>
            </field>
        </record>
        <record id="wbs_form_view" model="ir.ui.view">
            <field name="name">bm.wbs.form</field>
            <field name="model">bm.wbs</field>
            <field name="arch" type="xml">
                <form class="oe_form_configuration">
                    <sheet string="WBS">
                        <div class="oe_title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h1 class="o_row">
                                <field name="name" placeholder="e.g. Lamps"/>
                            </h1>
                        </div>
                        <group name="first" col="4">
                            <group>
                                <field name="code"/>
                                <field name="parent_id"/>
                            </group>
                            <group></group>
                        </group>
                        <div class="oe_clear"/>
                        <h2>Description</h2>
                        <field name="description"/>
                        <div class="oe_clear"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="wbs_list_view" model="ir.ui.view">
            <field name="name">bm.wbs.form</field>
            <field name="model">bm.wbs</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="WBS">
                    <field name="complete_name"/>
                    <field name="code"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="wbs_act" model="ir.actions.act_window">
            <field name="name">WBS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bm.wbs</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="wbs_search_view"/>
            <field name="view_id" ref="wbs_list_view"/>
        </record>
        <menuitem action="wbs_act" id="bm_action_wbs" name="WBS" parent="bm_menu_left" sequence="1"/>
        <!--Project-->
        <record id="view_project_form" model="ir.ui.view">
            <field name="name">bm.project.form</field>
            <field name="model">bm.project</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet string="Project">
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button name="action_get_attachment_tree_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Attachments"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Project Name"/>
                            </h1>
                        </div>
                        <div class="oe_row">
                            <h2>
                                <field name="full_name" placeholder="Full name"/>
                            </h2>
                        </div>
                        <notebook>
                            <page string="Basic data">
                                <group name="group_alias" colspan="2" col="2">
                                    <group>
                                        <field name="wbs_id"/>
                                        <field name="engineer_id"/>
                                    </group>
                                    <group>
                                        <field name="code"/>
                                        <field name="address"/>
                                    </group>
                                </group>
                                <h2>Foremen</h2>
                                <field name="foremen_ids" nolabel="1" widget="many2many_list">
                                    <tree string="Foremen">
                                        <field name="name"/>
                                        <field name="job_id"/>
                                        <field name="work_phone"/>
                                        <field name="department_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_project_tree" model="ir.ui.view">
            <field name="name">bm.project.tree</field>
            <field name="model">bm.project</field>
            <field name="arch" type="xml">
                <tree string="Project">
                    <field name="wbs_id"/>
                    <field name="full_name"/>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="code"/>
                    <field name="engineer_id"/>
                    <field name="foremen_ids"/>
                    <field name="attachment_ids"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="project_act" model="ir.actions.act_window">
            <field name="name">Project</field>
            <field name="res_model">bm.project</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new Project
                </p>
            </field>
        </record>
        <menuitem action="project_act" id="bm_action_project" name="Projects" parent="bm_menu_left" sequence="2"/>
        <!--Task-->
        <record id="wb_project_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="priority" eval="20" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook//page[1]" position="before">
                        <page name="main_data" string="Basic data">
                            <group>
                            <group id="g1">
                                <field name="code"/>
                                <field name="date"/>
                                <field name="start"/>
                            </group>
                            <group id="g2">
                                <field name="finish"/>
                                <field name="engineer_id"/>
                            </group>
                            </group>
                        </page>
                        <page name="est_page" string="Estimate">
                            <field name="estimate_ids"/>
                        </page>
                        <page name="reports_page" string="Reports">
                            <field name="report_ids"/>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
        <menuitem action="project.action_view_task" id="bm_action_contract" name="Tasks" parent="bm.bm_menu_left" sequence="4"/>
        <!--Report-->
        <record id="view_report_form" model="ir.ui.view">
            <field name="name">bm.report.form</field>
            <field name="model">bm.report</field>
            <field name="arch" type="xml">
                <form string="Report">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet string="Report">
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button name="action_get_attachment_tree_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Attachments"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="task_id" placeholder="Task"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Basic data">
                                <group name="group_alias" colspan="2" col="2">
                                    <group>
                                        <field name="foremen_id"/>
                                        <field name="date"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                                <field name="estimate_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_report_tree" model="ir.ui.view">
            <field name="name">bm.report.tree</field>
            <field name="model">bm.report</field>
            <field name="arch" type="xml">
                <tree string="Report">
                    <field name="date"/>
                    <field name="state"/>
                    <field name="task_id"/>
                    <field name="foremen_id"/>
                </tree>
            </field>
        </record>
        <record id="report_act" model="ir.actions.act_window">
            <field name="name">Reports</field>
            <field name="res_model">bm.report</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new Report
                </p>
            </field>
        </record>
        <menuitem action="report_act" id="bm_action_report" name="Reports" parent="bm.bm_menu_left" sequence="5"/>
        <!--Estimate-->
        <record id="view_estimate_form" model="ir.ui.view">
            <field name="name">bm.estimate.form</field>
            <field name="model">bm.estimate</field>
            <field name="arch" type="xml">
                <form string="Estimate">
                    <sheet string="Estimate">
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button name="action_get_attachment_tree_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Attachments"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Estimate name"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Basic data">
                                <group name="group_alias" colspan="2" col="2">
                                    <group>
                                        <field name="project_id"/>
                                        <field name="contract_id"/>
                                        <field name="spj_id"/>
                                        <field name="partner_id"/>
                                    </group>
                                    <group>
                                        <field name="currency_id"/>
                                        <field name="overheads"/>
                                        <field name="comment"/>
                                    </group>
                                </group>
                                <field name="pricing_ids" widget="one2many_list"
                                       context="{'pricing_ids': pricing_ids,}">
                                    <tree editable="bottom" string="Pricing Items">
                                        <field name="pricing_id"/>
                                        <field name="labor"/>
                                        <field name="mech"/>
                                        <field name="est_cost"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_estimate_tree" model="ir.ui.view">
            <field name="name">bm.estimate.tree</field>
            <field name="model">bm.estimate</field>
            <field name="arch" type="xml">
                <tree string="Estimate">
                    <field name="project_id"/>
                    <field name="contract_id"/>
                    <field name="spj_id"/>
                    <field name="partner_id"/>
                    <field name="currency_id"/>
                </tree>
            </field>
        </record>
        <record id="estimate_act" model="ir.actions.act_window">
            <field name="name">Estimates</field>
            <field name="res_model">bm.estimate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new Estimate
                </p>
            </field>
        </record>
        <menuitem action="estimate_act" id="bm_action_estimate" name="Estimates" parent="bm.bm_menu_left" sequence="6"/>
        <!--Prising-->
        <record id="view_pricing_form" model="ir.ui.view">
            <field name="name">bm.pricing.form</field>
            <field name="model">bm.pricing</field>
            <field name="arch" type="xml">
                <form string="Pricing">
                    <sheet string="Pricing">
                        <group name="group_alias" colspan="2" col="2">
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="pricing_uom"/>
                            </group>
                            <group>
                                <field name="labor"/>
                                <field name="mech"/>
                                <field name="est_cost"/>
                            </group>
                        </group>
                        <label for="rationale" string="Rationale" class="oe_edit_only"/>
                        <field name="rationale"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_pricing_tree" model="ir.ui.view">
            <field name="name">bm.pricing.tree</field>
            <field name="model">bm.pricing</field>
            <field name="arch" type="xml">
                <tree string="Pricing">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="pricing_uom"/>
                    <field name="labor"/>
                    <field name="mech"/>
                    <field name="est_cost"/>
                    <field name="rationale"/>
                </tree>
            </field>
        </record>
        <record id="pricing_act" model="ir.actions.act_window">
            <field name="name">Pricings</field>
            <field name="res_model">bm.pricing</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new Pricing
                </p>
            </field>
        </record>
        <menuitem action="pricing_act" id="bm_action_pricing" name="Pricings" parent="bm.bm_menu_left" sequence="7"/>
        <!--SPJ-->
        <record id="view_spj_form" model="ir.ui.view">
            <field name="name">bm.spj.form</field>
            <field name="model">bm.spj</field>
            <field name="arch" type="xml">
                <form string="SPJ">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet string="SPJ">
                        <group name="group_alias" colspan="2" col="2">
                            <group>
                                <field name="project_local_id"/>
                                <field name="project_external_id"/>
                                <field name="currency_id"/>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="amount_labor"/>
                                <field name="amount_mech"/>
                                <field name="amount_est_cost"/>
                            </group>
                        </group>
                        <label for="estimate_ids" string="Estimates" class="oe_edit_only"/>
                        <field name="estimate_ids"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_spj_tree" model="ir.ui.view">
            <field name="name">bm.spj.tree</field>
            <field name="model">bm.spj</field>
            <field name="arch" type="xml">
                <tree string="SPJ">
                    <field name="project_local_id"/>
                    <field name="project_external_id"/>
                    <field name="currency_id"/>
                    <field name="type"/>
                    <field name="amount_labor"/>
                    <field name="amount_mech"/>
                    <field name="amount_est_cost"/>
                </tree>
            </field>
        </record>
        <record id="spj_act" model="ir.actions.act_window">
            <field name="name">SPJs</field>
            <field name="res_model">bm.spj</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new SPJ
                </p>
            </field>
        </record>
        <menuitem action="spj_act" id="bm_action_spj" name="SPJs" parent="bm.bm_menu_left" sequence="8"/>
    </data>
</openerp>
